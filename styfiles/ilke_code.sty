\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ilke_code}
  [Code formatting packages]

% using minted requires the installation of the python3 package Pygments
\RequirePackage{minted} 
\RequirePackage{xcolor}
% listings does not have any dependencies outside of latex
\RequirePackage{listings}


\renewcommand\listoflistingscaption{List of source codes}
\definecolor{LightGray}{gray}{0.95}


% customise the appearance of the code snippets
\setminted{linenos=true}
% \setminted[]{frame=lines}
\setminted[]{numbersep=5pt}
\setminted[]{fontsize=\small}
\setminted[]{bgcolor=LightGray}

\usemintedstyle{borland}

% longlistings are good when including long code files in appendices
\newenvironment{longlisting}{\captionsetup{type=listing}}{}
